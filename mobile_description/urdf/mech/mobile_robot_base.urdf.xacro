<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:property name="base_length" value="0.5" />
<xacro:property name="base_width" value="0.3" />
<xacro:property name="base_height" value="0.08" />
<xacro:property name="offset" value="0.01" />
<xacro:property name="cylindrical_wheel_radius" value="0.07" />
<xacro:property name="cylindrical_wheel_length" value="0.02" />
<xacro:property name="caster_wheel_radius" value="0.04" />
<xacro:property name="base_mass" value="5.0" />
<xacro:property name="cylindrical_wheel_mass" value="0.5" />
<xacro:property name="caster_wheel_mass" value="0.3" />

<xacro:macro name="mobile_robot_base">

    <material name="green">
        <color rgba="0 0.8 0 1"/>
    </material>

    <material name="grey">
        <color rgba="0.8 0.8 0.8 1.0"/>
    </material>

    <link name="base_footprint" />
    
    <link name="base_link">
        <visual>
            <geometry>
                <box size="${base_length} ${base_width} ${base_height}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <box size="${base_length} ${base_width} ${base_height}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="${base_mass}"/>
            <inertia ixx="${(1/12) * base_mass * (base_width * base_width + base_height * base_height)}" 
                iyy="${(1/12) * base_mass * (base_length * base_length + base_height * base_height)}" 
                izz="${(1/12) * base_mass * (base_length * base_length + base_width * base_width)}" 
                ixy="0" ixz="0" iyz="0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </inertial>
    </link>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="${cylindrical_wheel_radius}" length="${cylindrical_wheel_length}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${cylindrical_wheel_radius}" length="${cylindrical_wheel_length}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        </collision>
        <inertial>
            <mass value="${cylindrical_wheel_mass}"/>
            <inertia ixx="${(1/12) * cylindrical_wheel_mass * (3 * cylindrical_wheel_radius * cylindrical_wheel_radius + cylindrical_wheel_length * cylindrical_wheel_length)}" 
                iyy="${(1/2) * cylindrical_wheel_mass * cylindrical_wheel_radius * cylindrical_wheel_radius}" 
                izz="${(1/12) * cylindrical_wheel_mass * (3 * cylindrical_wheel_radius * cylindrical_wheel_radius + cylindrical_wheel_length * cylindrical_wheel_length)}"
                ixy="0" ixz="0" iyz="0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </inertial>
    </link>

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="${cylindrical_wheel_radius}" length="${cylindrical_wheel_length}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${cylindrical_wheel_radius}" length="${cylindrical_wheel_length}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        </collision>
        <inertial>
            <mass value="${cylindrical_wheel_mass}"/>
            <inertia ixx="${(1/12) * cylindrical_wheel_mass * (3 * cylindrical_wheel_radius * cylindrical_wheel_radius + cylindrical_wheel_length * cylindrical_wheel_length)}" 
                iyy="${(1/2) * cylindrical_wheel_mass * cylindrical_wheel_radius * cylindrical_wheel_radius}" 
                izz="${(1/12) * cylindrical_wheel_mass * (3 * cylindrical_wheel_radius * cylindrical_wheel_radius + cylindrical_wheel_length * cylindrical_wheel_length)}"
                ixy="0" ixz="0" iyz="0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </inertial>
    </link>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="${caster_wheel_radius}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="${caster_wheel_radius}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="${caster_wheel_mass}"/>
            <inertia ixx="${(2/5) * caster_wheel_mass * caster_wheel_radius * caster_wheel_radius}" 
                iyy="${(2/5) * caster_wheel_mass * caster_wheel_radius * caster_wheel_radius}" 
                izz="${(2/5) * caster_wheel_mass * caster_wheel_radius * caster_wheel_radius}"
                ixy="0" ixz="0" iyz="0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </inertial>
    </link>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>

    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0.1 0.16 -0.03" rpy="0 0 0"/>
    </joint>

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0.1 -0.16 -0.03" rpy="0 0 0"/>
    </joint>

    <joint name="base_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel"/>
        <axis xyz="0 0 1"/>
        <origin xyz="-0.15 0 -0.06" rpy="0 0 0"/>
    </joint>

    <gazebo reference="left_wheel_link">
        <mu1>1.2</mu1>
        <mu2>1.2</mu2>
        <kp>1000000.0</kp>
        <kd>10.0</kd>
    </gazebo>

    <gazebo reference="right_wheel_link">
        <mu1>1.2</mu1>
        <mu2>1.2</mu2>
        <kp>1000000.0</kp>
        <kd>10.0</kd>
    </gazebo>

    <gazebo reference="caster_wheel_link">
        <mu1>0.001</mu1>
        <mu2>0.001</mu2>
    </gazebo>


</xacro:macro>
</robot>