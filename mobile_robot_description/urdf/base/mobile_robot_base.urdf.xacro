<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:property name="base_length" value="0.5" />
<xacro:property name="base_width" value="0.3" />
<xacro:property name="base_height" value="0.08" />
<xacro:property name="cylindrical_wheel_radius" value="0.07" />
<xacro:property name="cylindrical_wheel_length" value="0.02" />
<xacro:property name="caster_radius" value="0.04" />
<xacro:property name="base_mass" value="5.0" />
<xacro:property name="cylindrical_wheel_mass" value="0.5" />
<xacro:property name="caster_wheel_mass" value="0.3" />

<xacro:macro name="mobile_robot_base" params="prefix">

    <material name="green">
        <color rgba="0.0 0.8 0.0 1.0"/>
    </material>

    <material name="grey">
        <color rgba="0.8 0.8 0.8 1.0"/>
    </material>

    <link name="${prefix}base_footprint" />
    
    <link name="${prefix}base_link">
        <visual>
            <geometry>
                <box size="${base_length} ${base_width} ${base_height}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <box size="${base_length} ${base_width} ${base_height}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </collision>
        <inertial>
            <mass value="5.0"/>
            <inertia ixx="0.039" ixy="0.0" ixz="0.0" iyy="0.107" iyz="0.0" izz="0.122"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </inertial>
    </link>

    <link name="${prefix}right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="${cylindrical_wheel_radius}" length="${cylindrical_wheel_length}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${cylindrical_wheel_radius}" length="${cylindrical_wheel_length}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
        </collision>
        <inertial>
            <mass value="${cylindrical_wheel_mass}"/>
            <inertia ixx="0.0007" ixy="0.0" ixz="0.0" iyy="0.0012" iyz="0.0" izz="0.0007"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </inertial>
    </link>

    <link name="${prefix}left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="${cylindrical_wheel_radius}" length="${cylindrical_wheel_length}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${cylindrical_wheel_radius}" length="${cylindrical_wheel_length}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
        </collision>
        <inertial>
            <mass value="${cylindrical_wheel_mass}"/>
            <inertia ixx="0.0007" ixy="0.0" ixz="0.0" iyy="0.0012" iyz="0.0" izz="0.0007"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </inertial>
    </link>

    <link name="${prefix}caster_wheel">
        <visual>
            <geometry>
                <sphere radius="${caster_radius}"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="${caster_radius}"/>
            </geometry>
            <origin xyz="-0.15 0.0 -0.06" rpy="0.0 0.0 0.0"/>
        </collision>
        <inertial>
            <mass value="${caster_wheel_mass}"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </inertial>
    </link>

    <joint name="${prefix}base_footprint_joint" type="fixed">
        <parent link="${prefix}base_footprint"/>
        <child link="${prefix}base_link"/>
        <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="${prefix}base_right_wheel_joint" type="continuous">
        <parent link="${prefix}base_link"/>
        <child link="${prefix}right_wheel_link"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0.1 0.16 -0.03" rpy="1.5708 0.0 0.0"/>
    </joint>

    <joint name="${prefix}base_left_wheel_joint" type="continuous">
        <parent link="${prefix}base_link"/>
        <child link="${prefix}left_wheel_link"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0.1 -0.16 -0.03" rpy="1.5708 0.0 0.0"/>
    </joint>

    <joint name="${prefix}base_caster_wheel_joint" type="fixed">
        <parent link="${prefix}base_link"/>
        <child link="${prefix}caster_wheel"/>
        <axis xyz="0 0 1"/>
        <origin xyz="-0.15 0.0 -0.06" rpy="0.0 0.0 0.0"/>
    </joint>
</xacro:macro>
</robot>